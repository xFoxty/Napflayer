{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strict": true,
    "checkJs": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["index.js", "src/**/*"]
}
